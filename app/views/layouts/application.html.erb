<!DOCTYPE html>
<html>
<head>
  <title>PhilledIn</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a href="#" class="brand">PhilledIn</a>
				<ul class="nav">
					<li><%=link_to "All Statuses", pheed_path%>
				</ul>
				<% if current_user %>
					<ul class="nav pull-right">
					<li><%=link_to "Sign Out", logout_path %>
					</ul>
					<ul class="nav pull-right">
					<li><%=link_to current_user.profile_name, edit_path %>
					</ul>
				<% else %>
					<ul class="nav pull-right">
					<li><%=link_to "Sign In", login_path %>
					</ul>
					<ul class="nav pull-right">
					<li><%=link_to "Register Now!", register_path %>
					</ul>
				<% end %>
				
			</div>
		</div>
	</div>
<div class="container">
	<% flash.each do |type, message| %>
	<% if flash[:notice] %>
		<div class="alert <%= flash_class type %>">
			<button class="close" data-dismiss="alert">x</button>
			<%= message %>
			<% end %>
		</div>
	<% end %>

<%= yield %>

</div>
</body>
</html>
