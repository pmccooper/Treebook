<div class="container-fluid">
	<div class="row-fluid">
		<div class="span10"><h1><strong><%= @user.profile_name %></strong></h1></div>
	</div>
	<body>
	<div class="row-fluid">
		<div class="span1"><p><%= image_tag @user.gravatar_url %></p></div>
		<div class="span7">
			<p><strong>Name: <%= @user.full_name %></strong><br/>
			<strong>Email: <%= @user.email %></strong></p>
			<div class="pull-left"><%= link_to "Edit", edit_path %></div><br/>
		</div>
	</div>
			<div class="span10">
			<% if @statuses %>
				<% @statuses.each do |status| %>
				<div class="status">
					<div class="row-fluid">
						
						<p><%= status.content %></p>
						<div class="meta">
							<%= link_to time_ago_in_words(status.created_at) + " ago", status %>
							<% if status.user == current_user %>
							  	<span class="admin">
						    		| <%= link_to "Edit", edit_status_path(status) %> |
						    		  <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %>
						  		</span>
						  	  <% end %>
						</div>
					</div>
				</div>
				<% end %>
			<% end %>
			</div>
		</body>
</div>
		
