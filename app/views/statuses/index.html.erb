<div class="page-header">
<h1>Global News Pheed</h1>
</div>

<%= link_to "Post a New Status", new_status_path, class: "btn btn-success" %><br/>

<% @statuses.each do |status| %>
<div class="status">
  <div class="row-fluid">
	 <div class="span1">
	 	<%= image_tag status.user.gravatar_url %>
	 </div>
	 <div class="span7">
		  	<strong><%= status.user.profile_name %></strong>
				<p><%= status.content %></p>
				<div class="meta">
				  <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
				   <% if status.user == current_user %>
					  <span class="admin">
					    | <%= link_to "Edit", edit_status_path(status) %> |
					    <%= link_to "Delete", @status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %>
				   <% end %> 
				  </span>
				</div>
	 </div>
   </div>
</div>
<% end %>